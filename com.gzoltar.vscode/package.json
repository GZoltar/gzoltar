{
	"name": "vscode-gzoltar",
	"displayName": "GZoltar",
	"description": "Automatic testing and fault localization for Java.",
	"publisher": "GZoltar",
	"version": "1.0.2",
	"homepage": "https://gzoltar.com/",
	"icon": "resources/gzoltar.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/GZoltar/gzoltar"
	},
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"workspaceContains:**/pom.xml",
		"workspaceContains:**/build.xml",
		"workspaceContains:**/build.gradle",
		"workspaceContains:**/WORKSPACE"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gzoltar-commands",
					"title": "GZoltar",
					"icon": "media/dep.png"
				}
			]
		},
		"views": {
			"gzoltar-commands": [
				{
					"id": "gzoltar",
					"name": "Commands",
					"icon": "media/dep.png"
				}
			]
		},
		"commands": [
			{
				"command": "gzoltar.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "gzoltar.run",
				"title": "Run GZoltar",
				"icon": {
					"light": "resources/light/boolean.svg",
					"dark": "resources/dark/boolean.svg"
				}
			},
			{
				"command": "gzoltar.reset",
				"title": "Reset Configuration"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "gzoltar.refresh",
					"when": "view == gzoltar",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "gzoltar.run",
					"when": "view == gzoltar && viewItem == folder",
					"group": "inline"
				},
				{
					"command": "gzoltar.reset",
					"when": "view == gzoltar && viewItem == folder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.20.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"typescript": "^3.9.7",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/fs-extra": "^8.1.1",
		"fs-extra": "^9.0.1"
	}
}
